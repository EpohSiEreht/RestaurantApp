<!--  Shows Root Page -->
<% if current_user.nil? %>


  <div class="logo-box">
    <img src="/images/Fake-Shack_Logo.png"/>
  </div>
  <p class="motto"> Welcome to Shaky Shack! The Shack that LITERALLY SHAKES!!!!</p>
  <form action="/log_in" class="log_in_form">
    <input class="log-button" type="submit" value="Log-In" style="font-size:60px;height:100px;">
  </form>


<% else %>



<div class="logo-box">
  <img src="/images/Fake-Shack_Logo.png"/>
</div>
<p class="motto"> Welcome to Shaky Shack! The Shack that LITERALLY SHAKES!!!!</p>
<form action="users/<%=current_user.id%>/orders" class="log_in_form">
  <input class="log-button" type="submit" value="See your Orders" style="font-size:60px;height:100px;">
</form>
<%= button_to "Log-Out", sessions_path, method: :delete, :style => "font-size:60px;height:100px;width:100%;margin-top:150px;" %>


<% end %>
