<h3> Receipt </h3>


<ul>
  <h5>Table A</h5>
  <% @orders.where(@orders.table.name == "Table A").each do |order| %>
  <li>
    <%= order.food.name %>: $<%= order.food.price/100.00 %></br>
    <form action="orders/<%= order.id %>/edit">
      <input type="submit" value="Edit">
    </form>
    <%= button_to "Remove", order_path(order), method: :delete%>
    <%= button_to "Pay", order_path(order), method: :delete, data: {confirm: "Are you sure?"}%>
  </li>
  <% end %>

  <% sum = 0 %>
  <% @orders.where(@orders.table.name == "Table A").each do |order| %>
    <% if order.food.price? %>
      <% product = (order.food.price/100.00) %>
      <% sum += product %>
      <% product %>
    <% end %>
  <% end  %>
  Total: $<%= sum %>

