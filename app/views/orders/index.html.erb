<h3> Receipt </h3>


<ul>
  <h5>Table A</h5>
  <% @orders.each do |order| %>
  <% if order.table.name == "Table A" %>
  <li>
    <%= order.food.name %>: $<%= order.food.price/100.00 %> - <%= order.table.name %></br>
    <form action="orders/<%= order.id %>/edit">
      <input type="submit" value="Edit">
    </form>
    <%= button_to "Remove", order_path(order), method: :delete%>
    <%= button_to "Pay", order_path(order), method: :delete, data: {confirm: "Are you sure?"}%>
  </li>
  <% end %>
  <% end %>
  <li>
    <% sumA = 0 %>
    <% @orders.each do |order| %>
      <% if order.table.name == "Table A" %>
        <% product = (order.food.price/100.00) %>
        <% sumA += product %>
        <% product %>
      <% end %>
    <% end  %>
    Total: $<%= sumA %>
  </li>
</ul>

