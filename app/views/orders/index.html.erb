<div class="receipt-form">
<h5> Table A </h5>
  <% @orders.each do |order| %>
  <% if order.table.name == "Table A" %>

    <div class="row">
      <div class="seven columns">
        <%= order.food.name %>
      </div>
      <div class="offset-by-two three columns">
        <b>$</b><%= order.food.price/100.00 %>
      </div>
    </div>
    <div class="row">
      <div class="twelve columns">
        <%= order.status %>
      </div>
    </div>
    <div class="row">
      <div class="twelve columns" style="text-align:center;color:#CD2E41">
        Note: <%= order.note %>
      </div>
    </div>


    <div class="row" id="buttons">
    <div class="four columns">
      <form action="orders/<%= order.id %>/edit">
        <input type="submit" value="Edit">
      </form>
    </div>
    <div class="four columns">
      <%= button_to "Remove", order_path(order), method: :delete, :style => "font-size:30px;height:100px;width:100%;margin:0;"%>
    </div>
    <div class="four columns">
      <%= button_to "Pay", order_path(order), method: :delete, data: {confirm: "Are you sure?"}, :style => "font-size:30px;height:100px;width:100%;margin:0;"%>
    </div>
  </div>

  <% end %>
  <% end %>
  <div class="results">
    <% sumA = 0 %>
    <% @orders.each do |order| %>
      <% if order.table.name == "Table A" %>
        <% product = (order.food.price/100.00) %>
        <% sumA += product %>
        <% product %>
      <% end %>
    <% end  %>
    <div class="total"><strong>Total : <b>$</b><%= '%.2f' % [(sumA * 1.08875) * 1.00] %> </strong></div>
