<h3>Things to Cook</h3>
<div class="cook-order">

<ul>
  <% @orders.each do |order| %>
  <% if order.is_done != 0 %>
  <li>
    <div class="row">
      <div class="six columns">
        <strong><%= order.table.name %> </strong></br>
        <%= order.food.name %> </br>

          <% if Time.now.strftime("%M").to_i - order.created_at.strftime("%M").to_i <= 3 %>
          <div class="green-light">
          <%= time_ago_in_words(order.created_at) %>
          </div>
          <% elsif Time.now.strftime("%M").to_i - order.created_at.strftime("%M").to_i > 3 && Time.now.strftime("%M").to_i - order.created_at.strftime("%M").to_i < 7%>
          <div class="yellow-light">
          <%= time_ago_in_words(order.created_at) %>
          </div>
          <% elsif Time.now.strftime("%M").to_i - order.created_at.strftime("%M").to_i >= 7 %>
          <div class="red-light">
          <%= time_ago_in_words(order.created_at) %>
          </div>
          <% end %>

      </div>
      <div class="six columns">
        <form action="orders/<%= order.id %>/edit">
          <input type="submit" value="Update Status">
        </form>
      </div>
    </div>
  </li>
  <% end %>
  <% end %>
</ul>
<div class="cook-log-out">
<%= button_to "Log-Out", sessions_path, method: :delete %>
</div>
</div>

