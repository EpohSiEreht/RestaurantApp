<% if current_user.email == "admin@gmail.com" || current_user.email == "worker@gmail.com"%>
<h3> Edit Order </h3>

<%= form_for @order do |f| %>
  <%= f.collection_select(:table_id, Table.all, :id, :name) %>
  <%= f.collection_select(:food_id, Food.all, :id, :name) %>
  <%= f.submit "Update"%>
<% end %>

<% elsif current_user.email == "cook@gmail.com" %>
  <%= @order.table.name %> - <%= @order.food.name %> <%= @order.created_at.strftime("%H:%M:%S") %>
  <%= form_for @order do |f| %>
    <%= f.radio_button(:is_done, 0) %>
    <%= f.submit "Complete"%>
  <% end %>
<% end %>
