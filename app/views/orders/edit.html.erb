<% if current_user.email == "admin@gmail.com" || current_user.email == "worker@gmail.com"%>
<h3> Edit Order </h3>
<div class="edit-order">
<%= form_for @order do |f| %>
  <%= f.collection_select(:table_id, Table.all, :id, :name) %>
  <%= f.collection_select(:food_id, Food.all, :id, :name) %>
  <%= f.submit "Update"%>
<% end %>
</div>
<% elsif current_user.email == "cook@gmail.com" %>
<div class="update-order">
  <div class="order-detail">

    <strong><%= @order.table.name %> </strong></br>
    <i> <%= @order.food.name %> </i></br>
    <%= @order.created_at.strftime("%H:%M:%S") %>

  </div>
  <div class="complete">
    <%= form_for @order do |f| %>
      <%= f.radio_button(:is_done, 0) %>
      <%= f.submit "Complete"%>
    <% end %>
  </div>
<% end %>

</div>
