<h1> <%= current_user.email %> </h1>

<% if current_user.email == "admin@gmail.com" %>
<form action="/admin">
  <input type="submit" value="Go To Admin Page">
</form>
<%= button_to "Log-Out", sessions_path, method: :delete %>
<% else %>
<form action="users/<%=current_user.id%>/orders/new">
  <input type="submit" value="Create an Order">
</form>
<%= button_to "Log-Out", sessions_path, method: :delete %>
<% end %>
