<% if current_user.level == 0 %>
<h3> Edit User </h3>
<div class="edit-user">
<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :placeholder => current_user.name %>
  <%= f.label :email %>
  <%= f.text_field :email, :placeholder => current_user.email %>
  <%= f.label "New Password" %>
  <%= f.password_field :password, :placeholder => current_user.password %>
  <%= f.submit "Update"%>
<% end %>
</div>
<% else %>
  <h2> You don't have administrative access. </h2>
<% end %>

