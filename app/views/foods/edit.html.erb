<% if current_user.email == "admin@gmail.com" %>
<%= form_for @food do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name%>
  <%= f.label :description %>
  <%= f.text_field :description%>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.submit 'Edit' %>
<% end %>
<% else %>
<h2> You don't have administrative access. </h2>
<% end %>
