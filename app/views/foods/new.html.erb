
<% if current_user.level == 0  %>
<h3 style="font-size:110px;top:5%;"> Create Food </h3>
<div class="create-food">
  <%= form_for @food do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name %>
    <%= f.label "Description" %>
    <%= f.text_field :description %>
    <%= f.label "Price" %>
    <%= f.number_field :price %>
    <%= f.label "Category" %>
    <%= f.text_field :category, :placeholder => "Burger, Drink, etc"%>
    <%= f.submit %>
  <% end %>
  </div>
<% else %>
  <h2> You don't have administrative access. </h2>
<% end %>
